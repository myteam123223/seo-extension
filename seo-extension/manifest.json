{
  "manifest_version": 3,
  "name": "SEO Analyzer Extension",
  "version": "2.0",
  "description": "Herramienta completa de an√°lisis SEO",
  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "public/icon16.png",
      "48": "public/icon48.png",
      "128": "public/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "public/icon16.png",
    "48": "public/icon48.png",
    "128": "public/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["public/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
